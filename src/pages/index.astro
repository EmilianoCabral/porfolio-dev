---
import ProfileChek from "../components/icons/profileChek.astro";
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";
import Container from "../components/Container.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import Filebarcode from "../components/icons/Filebarcode.astro";
import Proyects from "../components/Proyects.astro";
import Aboutme from "../components/Aboutme.astro";
import TitleSection from "../components/TitleSection.astro";
import Hero from "../components/Hero.astro";
import Certificates from "../components/Certificates.astro";
---

<Layout
  title="Emiliano Portfolio | Web Developer and Programmer."
  description="Developer web"
>
  <main class="px-4">
    <Container class="py-16 md:py-36">
      <Hero />
    </Container>

    <div class="space-y-24">
      <Container id="experience">
        <TitleSection>
          <Briefcase class="size-8" />
          Experience
        </TitleSection>
        <Experience />
      </Container>

      <Container id="projects">
        <TitleSection>
          <Filebarcode class="size-7" />
          Projects
        </TitleSection>
        <Proyects />
      </Container>

      <Container id="About-me">
        <TitleSection>
          <ProfileChek class="size-8" />
          About me
        </TitleSection>
        <Aboutme />
      </Container>

      <Container>
        <TitleSection>
          certificates
        </TitleSection>
		<Certificates />
      </Container>

    </div>
  </main>
</Layout>
